
'''
@description: Enumerate system info. Distro, disk info, installed packages, log lists, printers, sysctl.conf, CPU & memory information and mount info.
@author: ohdae [bindshell@live.com]
'''
def system_info():
    status_msg("Kernel and Distro Information: ")
    cmd_exec("uname -a")

    status_msg("Disk Information: ")
    cmd_exec("df -hT")

    cmd_save("ls -al /etc/cron*", "cronjobs.txt")
    cmd_save("ls -alhtr /media", "media.txt")
    cmd_save("/usr/bin/lpstat -v", "printers.txt")
    save_file('/etc/sysctl.conf')
    save_file('/proc/cpuinfo')
    save_file('/proc/meminfo')
    cmd_save("find /var/log -type f -exec ls -la {} \;", "loglist.txt")


system_info()


